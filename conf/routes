# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           @com.amila.phonebook.controllers.HomeController.index()


GET    /user                       @com.amila.phonebook.controllers.UserController.addUser()

PUT    /user                        @com.amila.phonebook.controllers.UserController.updateUser()

DELETE  /user/:idToDelete                       @com.amila.phonebook.controllers.UserController.deleteUser(idToDelete:Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

